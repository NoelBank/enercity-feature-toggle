{
  "manifest_version": 3,
  "name": "enercity Feature Toggle",
  "description": "Preview current Development features.",
  "version": "0.1",

  "icons": {
    "16": "assets/img/icon16.png",
    "48": "assets/img/icon48.png",
    "128": "assets/img/icon128.png"
  },

  "action": {
    "default_icon": "assets/img/icon.png",
    "default_popup": "popup.html"
  },

  "permissions": ["tabs", "storage", "webNavigation", "scripting"],

  "host_permissions": [
    "https://*.neoskop.dev/",
    "https://*.neoskop.cloud/",
    "https://*.enercity.de/"
  ]
}
